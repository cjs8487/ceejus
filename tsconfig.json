{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "build",
        "baseUrl": "."
    },
    "include": [
        "src/**/*.ts",
        "src/main.js"
    ],
    "exclude": [
        "src/__tests__/**/*",
        "src/coverage/**/*"
    ]
}